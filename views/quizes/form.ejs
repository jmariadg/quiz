<!-- el objeto quiz con .pregunta y .respuesta corresponden con
     exports.new de quiz_controller.js
-->
<!-- por otro lado la manera de nombrar quiz[pregunta] y quiz[respuesta]
     en los inputs se hace así para utilizarlo en exports.create de quiz_controller.js
-->

<p>
  <label for="preg" class="rem">Pregunta:</label>
  <input type="text" id="pred" name="quiz[pregunta]" value="<%= quiz.pregunta %>"/>
</p>
<p>
  <label for="resp" class="rem">Respuesta:</label>
  <input type="text" id="resp" name="quiz[respuesta]" value="<%= quiz.respuesta %>"/>
</p>
<p>
  <label for="tema" class="rem">Categoría</label>
  <select name="quiz[tema]" id="tema">
	<%
	  for (keyTema in tablaTemas){
		seleccionado = "";
		if (keyTema===quiz.tema){
			seleccionado="selected";
		}%>
    <option value="<%= keyTema %>" <%= seleccionado %>><%= tablaTemas[keyTema] %></option>
    <% } %>

  </select>
</p>

<a href="/quizes"><button type="button">Cancelar</button></a>
<input type="submit" value="Salvar"/>